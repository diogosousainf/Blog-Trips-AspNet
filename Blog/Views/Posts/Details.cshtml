@model Blog.Models.Posts

@{
    ViewData["Title"] = "Details";
}


<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title">Post Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                        <dt class="col-sm-3">Image:</dt>
                        <dd class="col-sm-9">
                            <img src="@Model.Image" alt="@Model.Description" class="img-fluid" style="max-height: 300px; object-fit: cover;">
                        </dd>
                    </dl>
                </div>
                @if (User.Identity.IsAuthenticated && User.Identity.Name == Model.Email)
                {
                      <div class="card-footer">
                    <div class="btn-group" role="group" aria-label="Post Actions">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                            </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                }
              
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        color: #333;
        font-family: Arial, sans-serif;
    }

    h1, h4 {
        color: #333;
    }

    .card {
        transition: all 0.3s ease;
        border: none;
        background-color: #fff;
    }

    .card-footer {
        background-color: #fff;
        border-top: none;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }
</style>
