@model Blog.Models.Posts

@{
    ViewData["Title"] = "Details";
}

<script src="https://kit.fontawesome.com/0ba84eacf9.js" crossorigin="anonymous"></script>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title">Post Details</h4>
                    <hr />
                    <dl class="row">
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                        <dd class="col-sm-9 text-center imagem">
                            <img src="@Model.Image" alt="@Model.Description" class="img-fluid rounded-lg " style="max-height : 600px; width: auto; ">
                        </dd>
                        <dd class="col-sm-9">
                            <p class="card-text">
                                <i class="fas fa-thumbs-up"></i> @Model.LikeCount
                            </p>
                        </dd>
                    </dl>
                </div>
                @if (User.Identity.IsAuthenticated && User.Identity.Name == Model.Email || User.IsInRole("Admin"))
                {
                    <div class="card-footer">
                        <div class="btn-group" role="group" aria-label="Post Actions">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        color: #333;
        font-family: Arial, sans-serif;
    }

    h1, h4 {
        color: #333;
    }

    .card {
        transition: all 0.3s ease;
        border: none;
        background-color: #fff;
    }

    .card-footer {
        background-color: #fff;
        border-top: none;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }
    
    .imagem
    {
        text-align: center;
        margin-left: 100px;
        
    }
</style>
