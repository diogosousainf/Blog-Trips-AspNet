@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Lista de Usuários";
}

<div class="container mt-4">
    <h1 class="text-center">Lista de Usuários</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">Criar Novo Usuário</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nome de Usuário</th>
                    <th>Email</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-dark">Detalhes</a>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-dark">Editar</a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
