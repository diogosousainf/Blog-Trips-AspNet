@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <!-- Hero Section -->
    <div class="jumbotron text-center bg-light p-5">
        <h1 class="display-4">Bem-vindo ao Blog de Viagens</h1>
        <p class="lead">Explore destinos incríveis, descubra dicas de viagem e inspire-se para a sua próxima aventura!</p>
        <a class="btn btn-primary btn-lg" href="/About" role="button">Saiba Mais</a>
    </div>

    <!-- Featured Destinations Section -->
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="~/images/destination1.jpg" class="card-img-top" alt="Destino 1">
                <div class="card-body">
                    <h5 class="card-title">Destino Exótico 1</h5>
                    <p class="card-text">Uma breve descrição do destino exótico 1. Descubra suas belezas e atrações.</p>
                    <a href="/Destinations/1" class="btn btn-primary">Leia Mais</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="~/images/destination2.jpg" class="card-img-top" alt="Destino 2">
                <div class="card-body">
                    <h5 class="card-title">Destino Exótico 2</h5>
                    <p class="card-text">Uma breve descrição do destino exótico 2. Descubra suas belezas e atrações.</p>
                    <a href="/Destinations/2" class="btn btn-primary">Leia Mais</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="~/images/destination3.jpg" class="card-img-top" alt="Destino 3">
                <div class="card-body">
                    <h5 class="card-title">Destino Exótico 3</h5>
                    <p class="card-text">Uma breve descrição do destino exótico 3. Descubra suas belezas e atrações.</p>
                    <a href="/Destinations/3" class="btn btn-primary">Leia Mais</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Latest Blog Posts Section -->
    <div class="row">
        <div class="col-md-12">
            <h2>Últimas Postagens</h2>
            <div class="list-group">
                <a href="/Posts/1" class="list-group-item list-group-item-action">
                    <h5 class="mb-1">Postagem de Viagem 1</h5>
                    <p class="mb-1">Uma breve descrição da postagem de viagem 1. Explore as aventuras e dicas.</p>
                </a>
                <a href="/Posts/2" class="list-group-item list-group-item-action">
                    <h5 class="mb-1">Postagem de Viagem 2</h5>
                    <p class="mb-1">Uma breve descrição da postagem de viagem 2. Explore as aventuras e dicas.</p>
                </a>
                <a href="/Posts/3" class="list-group-item list-group-item-action">
                    <h5 class="mb-1">Postagem de Viagem 3</h5>
                    <p class="mb-1">Uma breve descrição da postagem de viagem 3. Explore as aventuras e dicas.</p>
                </a>
            </div>
        </div>
    </div>

    <!-- Newsletter Signup Section -->
    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card p-4 bg-light">
                <h3 class="card-title">Inscreva-se no nosso Boletim Informativo</h3>
                <p class="card-text">Receba as últimas atualizações e dicas de viagem diretamente no seu email.</p>
                <form>
                    <div class="form-row">
                        <div class="col-md-8">
                            <input type="email" class="form-control" placeholder="Seu email">
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary btn-block">Inscrever-se</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .jumbotron {
        background: url('~/images/hero.jpg') no-repeat center center;
        background-size: cover;
        color: white;
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }
</style>
