@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "User List";
}

<div class="container mt-4">
    <h1 class="text-center">User List</h1>

    <div class="table-responsive mt-5">
        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary m-1">Details</a>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-secondary m-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger m-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    body{
        background-color: #ecfeff;
    }
</style>